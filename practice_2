import React, { useState } from "react";
import ReactDOM from "react-dom/client";
import "./index.css";

function App() {
  // ‚úÖ Initial list of books
  const [books, setBooks] = useState([
    { id: 1, title: "The Great Gatsby", author: "F. Scott Fitzgerald" },
    { id: 2, title: "To Kill a Mockingbird", author: "Harper Lee" },
    { id: 3, title: "1984", author: "George Orwell" },
  ]);

  const [search, setSearch] = useState("");
  const [newTitle, setNewTitle] = useState("");
  const [newAuthor, setNewAuthor] = useState("");

  // ‚úÖ Add new book
  const addBook = (e) => {
    e.preventDefault();
    if (newTitle.trim() && newAuthor.trim()) {
      const newBook = {
        id: Date.now(),
        title: newTitle,
        author: newAuthor,
      };
      setBooks([...books, newBook]);
      setNewTitle("");
      setNewAuthor("");
    }
  };

  // ‚úÖ Remove book
  const removeBook = (id) => {
    setBooks(books.filter((book) => book.id !== id));
  };

  // ‚úÖ Filter books by search
  const filteredBooks = books.filter(
    (book) =>
      book.title.toLowerCase().includes(search.toLowerCase()) ||
      book.author.toLowerCase().includes(search.toLowerCase())
  );

  return (
    <div className="container">
      <h2>üìö Library Management</h2>

      {/* Search */}
      <input
        type="text"
        placeholder="Search by title or author..."
        value={search}
        onChange={(e) => setSearch(e.target.value)}
        className="search-box"
      />

      {/* Book List */}
      <ul className="book-list">
        {filteredBooks.length > 0 ? (
          filteredBooks.map((book) => (
            <li key={book.id} className="book-item">
              <span>
                <strong>{book.title}</strong> ‚Äî {book.author}
              </span>
              <button onClick={() => removeBook(book.id)} className="remove-btn">
                ‚ùå Remove
              </button>
            </li>
          ))
        ) : (
          <p>No books found.</p>
        )}
      </ul>

      {/* Add Book Form */}
      <form onSubmit={addBook} className="add-form">
        <input
          type="text"
          placeholder="Book Title"
          value={newTitle}
          onChange={(e) => setNewTitle(e.target.value)}
          required
        />
        <input
          type="text"
          placeholder="Author"
          value={newAuthor}
          onChange={(e) => setNewAuthor(e.target.value)}
          required
        />
        <button type="submit">‚ûï Add Book</button>
      </form>
    </div>
  );
}

// ‚úÖ Render App
const root = ReactDOM.createRoot(document.getElementById("root"));
root.render(<App />);
